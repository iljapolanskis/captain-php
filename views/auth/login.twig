{% extends 'layout/base.twig' %}

{% block content %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">

        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <div class="flex justify-center">
                {% include 'elements/svg/logo.twig' with {
                    width: "128px",
                    height: "128px",
                } %}
            </div>
            <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-white">Log In</h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            {% include 'form/elements/alerts.twig' with {'errors': form_errors} %}
            <form class="space-y-4 text-white" method="POST">
                <!-- Username input -->
                {% include 'form/elements/input.twig' with {
                    'name': 'name',
                    'label': 'Username',
                    'type': 'text',
                    'placeholder': 'Username',
                    'value': form_input.name,
                    'error': form_errors.name | first,
                } %}

                <!-- Password input -->
                {% include 'form/elements/input.twig' with {
                    'name': 'password',
                    'label': 'Password',
                    'type': 'password',
                    'placeholder': 'Password',
                    'error': form_errors.password | first,
                } %}

                {% include 'form/elements/checkbox.twig' with {
                    'name': 'remember',
                    'label': 'Remember Me',
                    'description': 'Stay logged in for 7 days',
                    'checked': form_input.remember,
                    'error': form_errors.remember | first,
                } %}


                <div class="text-center lg:text-left">
                    <div>
                        {% include 'form/elements/button.twig' with {
                            'label': 'Login',
                            'type': 'submit',
                        } %}
                    </div>


                    <p class="mt-10 text-center text-sm text-gray-400">
                        Don't have an account?
                        <a href="/register"
                           class="font-semibold leading-6 text-indigo-400 hover:text-indigo-300">Register</a>
                    </p>
                </div>

                {{ csrf.fields | raw }}
            </form>
        </div>
    </div>
{% endblock %}
