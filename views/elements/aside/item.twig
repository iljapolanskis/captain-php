{# Expects field array [
        'post' => PostInterface,
    ]
#}

<li class="px-4 py-4 sm:px-6 lg:px-8">
    <div class="flex items-center gap-x-3">
        <img src="{{ asset('build/images/anime.jpg') }}" alt="" class="h-6 w-6 flex-none rounded-full bg-gray-800"
             height="120" width="270">
        <h3 class="flex-auto truncate text-sm font-semibold leading-6 text-white">{{ post.getAuthor().getName() }}</h3>
        <time datetime="2023-01-23T11:00"
              class="flex-none text-xs text-gray-600">{{ post.getHumanReadableDate() }}</time>
    </div>
    <p class="mt-3 truncate text-sm text-gray-500">
        Posted <a href="{{ post.getUrl() }}"><span class="text-gray-400">{{ post.getTitle() }}</span></a>
        (
        {% for category in post.getCategories() %}
            <a href="{{ category.getUrl() }}">
                <span class="bg-blue-100 text-blue-800 text-xs font-medium mr-2 pl-1 pr-0 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
                    {{ category.getName() }}
                </span>
            </a>
        {% endfor %}
        )
    </p>
</li>