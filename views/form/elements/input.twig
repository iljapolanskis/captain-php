{# Expects field array [
        'id' => 'id', // optional, defaults to name
        'name' => 'name',
        'type' => 'text', // optional, defaults to text
        'label' => 'Name',
        'placeholder' => 'Enter your name',
        'value' => 'John Doe',
        'error' => 'This field is required',
        'show_label' => false, // optional, defaults to false
    ]
#}

<label for="{{ id ?? name }}" class="{{ show_label ? '' : 'hidden ' }}block text-sm font-medium leading-6 text-white">
    {{ label }}
</label>

<div class="mt-2">
    <input id="{{ id ?? name }}"
           name="{{ name }}"
           type="{{ type ?? 'text' }}"
           autocomplete="{{ autocomplete ?? 'off' }}"
           value="{{ value }}"
           placeholder="{{ placeholder ?? '' }}"
           class="{{ error ? 'ring-red-500 ' : '' }}block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"
    >
</div>

