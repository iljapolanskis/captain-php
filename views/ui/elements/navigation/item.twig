<li>
    {% set path = path_for('post.list', { 'category': category.name }) %}

    <a href="{{ path }}"
       class="{{ active(path) ? 'bg-gray-700 text-white ' : '' }}text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
        <span class="{{ active(path) ? 'text-white ' : 'text-gray-400 ' }}flex h-6 w-6 shrink-0 items-center justify-center rounded-lg border border-gray-700 bg-gray-800 text-[0.625rem] font-medium  group-hover:text-white">
            {{ category.name|first|upper }}
        </span>
        <span class="truncate">{{ category.name|upper }}</span>
    </a>

</li>
